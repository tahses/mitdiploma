<% provide(:title, 'Diploma Request Form') %>
<h1>MIT Diploma Request Form</h1>
<p>
</p>

<div class="row">
<div class="span6 offset3">

  <%= form_for  @mit_diploma, :class => "form-inline", :action => "confirm" do |f| %>
    <%= render 'shared/error_messages' %>
    <div>
      <%= f.text_field :name, :class=> "input-medium", :placeholder=>"Name" %>

      <%= f.text_field :f_name, :class=> "input-medium", :placeholder=>"Father's Name" %>

      <%= f.text_field :g_f_name, :class=> "input-medium", :placeholder=>"Grand Father's Name" %>
    </div>
    <div>
      <%= f.text_field :shim, :class=> "input-medium", :placeholder=>" ~H�~H~] " %>
      <%= f.text_field :shim_abo, :class=> "input-medium", :placeholder=>"  ~H�~H~]  ~J�~I� " %>
      <%= f.text_field :shim_abo_hago, :class=> "input-medium", :placeholder=>"~H�~H~] ~J�~I� ~H~S~L~N "%>
    </div>
    <div>
      <%= f.select :department,  ['ECE', 'CSE', 'EEE', 'IT'], {:prompt => 'Department'} %>
      <%= f.select :year_of_graduation, ['2007', '2008', '2009', '2010', '2011', '2012'], {:prompt => 'Year of Graduation'} %>
    </div>
    <div>
      <%= f.text_field :email, :class=> "input-big", :placeholder=>"Email" %>
    </div>
    <div>
      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    </div>
  <% end %>
</div>
</div>

